# alias
alias eb="vi ~/.bashrc"
alias ebp="vi ~/.bash_profile"
alias vimrc="vi ~/.vimrc"
alias re="source ~/.bash_profile"
alias ll="ls -ltG"
alias lla="ls -altG"
alias vi="vim -p"
alias grep='grep --color'

# chdir
alias .="pwd"
alias ..="cd .."
alias ...="cd ../../"
alias downloads="cd ~/Downloads;pwd;ll"
alias develop="cd ~/develop;pwd;ll"

